<h4>Your letters</h4>
<h1>New game</h1>
<ul class="letters">
  <% @letters.each do |letter| %>
    <div><li><%= letter%></li></div>
  <% end %>
</ul>
<p>What is the longest word you can find?</p>
<form action="/score" method="post">
  <input type="text" name="letters" value="<%= @letters.join(",") %>" >
  <input type="text" name="word" value="<%= params[:word] %>" placeholder="Type your word" >
  <input type="submit" value="Play">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
